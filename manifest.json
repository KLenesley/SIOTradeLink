{
  "manifest_version": 3,
  "name": "SIOTradeLink",
  "version": "2",
  "description": "Redirection entre Planspiel et Boursorama pour les SIO",
  "permissions": [],
  "host_permissions": [
    "https://trading.planspiel-boerse.de/*",
    "https://www.boursorama.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://trading.planspiel-boerse.de/*"],
      "js": ["planspiel.js"]
    },
    {
      "matches": ["https://www.boursorama.com/*"],
      "js": ["boursorama.js"]
    }
  ],
  "action": {
    "default_icon": "SIOBourse.png",
    "default_title": "Redirection entre Planspiel et Boursorama"
  },
  "icons": {
    "16": "SIOBourse.png",
    "48": "SIOBourse.png",
    "128": "SIOBourse.png"
  }
}
